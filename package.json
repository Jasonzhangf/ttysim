{
  "name": "ttysim",
  "version": "1.0.0",
  "description": "Virtual TTY client system with multi-device synchronization",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter server dev && pnpm --filter web-client dev",
    "dev:server": "pnpm --filter server dev",
    "dev:web": "pnpm --filter web-client dev",
    "dev:mobile": "pnpm --filter mobile-client dev",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter server build",
    "build:web": "pnpm --filter web-client build",
    "build:mobile": "pnpm --filter mobile-client build",
    "test": "pnpm -r test",
    "test:server": "pnpm --filter server test",
    "test:client": "pnpm --filter web-client test",
    "test:integration": "pnpm --filter server test:integration",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "bootstrap": "pnpm install && pnpm -r build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}